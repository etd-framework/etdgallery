<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.8" client="site" method="upgrade">
	<name>mod_etdgallery</name>
	<author>ETD Solutions</author>
	<creationDate>May 2015</creationDate>
	<copyright>Copyright (C) 2015 - 2018 ETD Solutions. All rights reserved.</copyright>
	<license>Internal use only</license>
	<authorEmail>support@etd-solutions.com</authorEmail>
	<authorUrl>etd-solutions.com</authorUrl>
	<version>1.1.0</version>
	<description>MOD_ETDGALLERY_XML_DESCRIPTION</description>

	<files>
		<filename module="mod_etdgallery">mod_etdgallery.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>mod_etdgallery.xml</filename>
	</files>

	<languages>
		<language tag="fr-FR">language/fr-FR/fr-FR.mod_etdgallery.ini</language>
		<language tag="fr-FR">language/fr-FR/fr-FR.mod_etdgallery.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic"
					  addfieldpath="/administrator/components/com_etdgallery/models/fields">

				<field
						name="article_only"
						type="radio"
						class="btn-group btn-group-yesno"
						default="0"
						label="MOD_ETDGALLERY_FIELD_ARTICLE_ONLY_LABEL"
						description="MOD_ETDGALLERY_FIELD_ARTICLE_ONLY_DESC"
						>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
						name="tag_id"
						type="tag"
						label="MOD_ETDGALLERY_FIELD_TAGS_LABEL"
						description="MOD_ETDGALLERY_FIELD_TAGS_DESC"
						multiple="true"
						custom="deny" />

				<field name="type" type="list"
					   label="MOD_ETDGALLERY_FIELD_TYPE_LABEL"
					   description="MOD_ETDGALLERY_FIELD_TYPE_DESC"
					   default="">
					<option value="">JALL</option>
					<option value="image">COM_ETDGALLERY_FIELD_TYPE_OPTION_IMAGE</option>
					<option value="video">COM_ETDGALLERY_FIELD_TYPE_OPTION_VIDEO</option>
				</field>

				<field type="spacer"/>

				<field
					name="count"
					type="text"
					default="10"
					label="MOD_ETDGALLERY_FIELD_COUNT_LABEL"
					description="MOD_ETDGALLERY_FIELD_COUNT_DESC" />

				<field
					name="ordering"
					type="list"
					default="c_dsc"
					label="MOD_ETDGALLERY_FIELD_ORDERING_LABEL"
					description="MOD_ETDGALLERY_FIELD_ORDERING_DESC"
				>
					<option value="ordering">MOD_ETDGALLERY_VALUE_ORDERING</option>
					<option value="c_dsc">MOD_ETDGALLERY_VALUE_RECENT_ADDED</option>
					<option value="m_dsc">MOD_ETDGALLERY_VALUE_RECENT_MODIFIED</option>
					<option value="p_dsc">MOD_ETDGALLERY_VALUE_RECENT_PUBLISHED</option>
					<option value="pdown_asc">MOD_ETDGALLERY_VALUE_CLOSEST_PUBLISHED_DOWN</option>
					<option value="mc_dsc">MOD_ETDGALLERY_VALUE_RECENT_TOUCHED</option>
					<option	value="random">MOD_ETDGALLERY_VALUE_RECENT_RAND</option>
				</field>

				<field type="spacer"/>

				<field
						name="thumb_size"
						type="size"
						label="MOD_ETDGALLERY_FIELD_THUMB_SIZE_LABEL"
						description="MOD_ETDGALLERY_FIELD_THUMB_SIZE_DESC"
						default="thumb"
						required="true">
						<option value="">MOD_ETDGALLERY_FIELD_THUMB_SIZE_SELECT</option>
					</field>

				<field type="spacer"/>

				<field
						name="show_more"
						type="radio"
						class="btn-group btn-group-yesno"
						default="1"
						label="MOD_ETDGALLERY_FIELD_SHOW_MORE_LABEL"
						description="MOD_ETDGALLERY_FIELD_SHOW_MORE_DESC"
						>
					<option value="1">JSHOW</option>
					<option value="0">JHIDE</option>
				</field>

				<field
						name="more_text"
						type="text"
						default=""
						label="MOD_ETDGALLERY_FIELD_MORE_TEXT_LABEL"
						description="MOD_ETDGALLERY_FIELD_MORE_TEXT_DESC" />

				<field
						name="base"
						type="menuitem"
						label="MOD_ETDGALLERY_FIELD_ACTIVE_LABEL"
						description="MOD_ETDGALLERY_FIELD_ACTIVE_DESC"
						>
					<option value="">JCURRENT</option>
				</field>

			</fieldset>

			<fieldset name="gallery"
					  label="MOD_ETDGALLERY_FIELDSET_GALLERY_LABEL">

				<field
						name="enable_gallery"
						type="radio"
						class="btn-group btn-group-yesno"
						default="0"
						label="MOD_ETDGALLERY_FIELD_ENABLE_GALLERY_LABEL"
						description="MOD_ETDGALLERY_FIELD_ENABLE_GALLERY_DESC"
						>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

			</fieldset>

			<fieldset name="carousel"
						label="MOD_ETDGALLERY_FIELDSET_CAROUSEL_LABEL">

				<field
						name="carousel_interval"
						type="text"
						default="5000"
						label="MOD_ETDGALLERY_FIELD_INTERVAL_LABEL"
						description="MOD_ETDGALLERY_FIELD_INTERVAL_DESC" />

				<field
						name="carousel_pause"
						type="radio"
						class="btn-group btn-group-yesno"
						default="1"
						label="MOD_ETDGALLERY_FIELD_CAROUSEL_PAUSE_LABEL"
						description="MOD_ETDGALLERY_FIELD_CAROUSEL_PAUSE_DESC"
						>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
						name="carousel_wrap"
						type="radio"
						class="btn-group btn-group-yesno"
						default="1"
						label="MOD_ETDGALLERY_FIELD_CAROUSEL_WRAP_LABEL"
						description="MOD_ETDGALLERY_FIELD_CAROUSEL_WRAP_DESC"
						>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
						name="carousel_keyboard"
						type="radio"
						class="btn-group btn-group-yesno"
						default="1"
						label="MOD_ETDGALLERY_FIELD_CAROUSEL_KEYBOARD_LABEL"
						description="MOD_ETDGALLERY_FIELD_CAROUSEL_KEYBOARD_DESC"
						>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

			</fieldset>

			<fieldset name="advanced">

				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
						name="item_class"
						type="textarea" rows="3"
						label="MOD_ETDGALLERY_FIELD_ITEM_CLASS_LABEL"
						description="MOD_ETDGALLERY_FIELD_ITEM_CLASS_DESC" />

				<field
					name="moduleclass_sfx"
					type="textarea" rows="3"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
				>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />

				<field
					name="cachemode"
					type="hidden"
					default="static"
				>
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
